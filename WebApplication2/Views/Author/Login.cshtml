@using WebChronicles.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>


<div id="login-container" class="content-section box ml-auto mr-auto mt-6 is-justify-content-center">
    <form asp-controller="Author" asp-action="Login">
        @Html.AntiForgeryToken()

        <div class="field">
            <label class="label" for="Email">Email</label>
            <div class="control">
                <input class="input" type="text" name="Email" asp-for="Email"/>
            </div>
        </div>

        <div class="field">
            <label class="label" for="Password">Password</label>
            <div class="control">
                <input class="input" type="password" name="Password" asp-for="Password" />
            </div>
        </div>

        <div class="field is-grouped">
            <div class="control">
                <input type="submit" name="submit" class="button is-link" value="Login" />
            </div>
        </div>
    </form>
</div>
